{
  "version": 2,
  "buildCommand": "npm run build-css && npm install || true",
  "public": true,
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/vercel.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "DB_TYPE": "postgresql",
    "NODE_ENV": "production"
  },
  "routes": [
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/vercel.js"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}